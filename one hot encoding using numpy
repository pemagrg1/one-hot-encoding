from numpy import array
doc1 = "Can I eat the Pizza".lower()
doc2 = "You can eat the Pizza".lower()
doc1 = doc1.split()
doc2 = doc2.split()
doc1_array = array(doc1)
doc2_array = array(doc2)
doc3 = doc1+doc2
doc3 = set(doc3)
doc4 = dict()
for i in doc3:
    ids = []
    for j in doc3:
        if i == j:
            ids.append(1)
        else:
            ids.append(0)
            doc4[i] = ids
for i,w in enumerate(doc4):
    print (i,w)
    
"""
OUTPUT: 
0 can
1 pizza
2 eat
3 you
4 the
5 i
"""
